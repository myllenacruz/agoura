{
	"compilerOptions": {
	  "target": "es2021",
	  "module": "commonjs",
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "strict": true,
	  "strictPropertyInitialization": false,
	  "baseUrl": "./src",
	  "paths": {
		"@src/*": ["src/*"],
		"@domains/*": ["domains/*"],
		"@shared/*": ["shared/*"]
	  },
	  "allowJs": true,
	  "resolveJsonModule": true,
	  "esModuleInterop": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "forceConsistentCasingInFileNames": true
	},
	"exclude": [
	  "node_modules",
	  "jest.config.js",
	  "coverage"
	]
  }
